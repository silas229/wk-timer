# Base URL for the application (used for sharing and embed features)
# In production, set this to your domain (e.g., https://your-domain.com)
# In development, this defaults to http://localhost:3000
BASE_URL=http://localhost:3000

# Port for the development server (defaults to 3000 if not set)
PORT=3000

# Storage directory for shared rounds (relative to project root)
# Defaults to "./data/rounds" if not set
ROUNDS_STORAGE_DIR=./data/rounds

# Node environment (automatically set by Next.js)
# NODE_ENV=development
