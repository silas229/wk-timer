{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "test": {
      "dependsOn": ["^test"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "**/*.test.*",
        "**/*.spec.*",
        "**/vitest.config.*",
        "**/vitest.setup.*"
      ],
      "outputs": ["coverage/**"]
    },
    "test:run": {
      "dependsOn": ["^test:run"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "**/*.test.*",
        "**/*.spec.*",
        "**/vitest.config.*",
        "**/vitest.setup.*"
      ],
      "outputs": ["coverage/**"]
    },
    "test:coverage": {
      "dependsOn": ["^test:coverage"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "**/*.test.*",
        "**/*.spec.*",
        "**/vitest.config.*",
        "**/vitest.setup.*"
      ],
      "outputs": ["coverage/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
